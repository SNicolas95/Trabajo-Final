<main class="lista-vacantes">
    <h2>Lista de vacantes</h2>

    <div class="panel-administracion">

    {{#if vacantes.length}}

        {{#each vacantes}}
            <div class="vacante">
                <div class="caja">
                    <h3>{{empresa}}</h3>
                    <p class="puesto">{{titulo}}</p>
                </div>

                <div class="caja">
                    <p class="etiqueta">Ubicacion</p>
                    <p class="nombre">{{ubicacion}}</p>
                </div>

                <div class="caja">
                    <p class="etiqueta">Contrato</p>
                    <p class="nombre contrato">{{contrato}}</p>
                </div>
                
                <div class="caja centrar-vertical">
                    <a href="/vacantes/{{url}}" class="btn btn-verde">Editar</a>
                </div>
                <div class="caja centrar-vertical">
                    <a href="#" class="btn btn-rojo" data-eliminar={{_id}} >Eliminar</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No hay vacantes</p>
    {{/if}}
    </div>
</main>